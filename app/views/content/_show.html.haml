- if !defined?(content_items) then content_items = content.content_items end
- if !defined?(sortable) then sortable = true end

%ul.unstyled.content-items{:class => "content-#{content.holder_type.underscore.dasherize} #{sortable ? :sortable : :'not-sortable'}", :id => dom_id(content), :"data-sort-url" => "/#{content.holder_type.underscore.pluralize}/#{content.holder.try :id}/sort_content"}
  - if content_items.present?
    - content_items.each do |content_item|
      = render :partial => "content_items/show", :locals => {:content_item => content_item}
  - else
    %li.content-item.blank-slate
      .content-item-inner
        .content-item-body
          %h2= tt("#{controller_name}.blank_slate.header", "shared.blank_slate.header")
          %p= tt("#{controller_name}.blank_slate.body", "shared.blank_slate.body")
      = spacer
