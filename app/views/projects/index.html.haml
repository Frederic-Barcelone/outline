#new-modal.modal.hide
  .modal-header
    %a.close{:href => "#"} &times;
    %h3 Create new project
  .modal-body
    = render "form"

- content_for(:page_header) do
  = link_to t(".new_page_link"), {:action => "new"}, :class => "btn success", :"data-controls-modal" => "new-modal"

= bulk_collection do
  = bulk_action :add_tags
  = link_to_function(t('.deactivate_project'), "OUT.bulk.execute('deactivate', this);", :class => 'deactivate')
  = link_to_function(t('.activate_project'), "OUT.bulk.execute('activate', this);", :class => 'activate')
  = bulk_action :destroy