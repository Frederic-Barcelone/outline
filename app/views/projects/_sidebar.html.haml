- if current_project
  - content_for(:contextual_sidebar) do

    - if links = favorite_project_links.presence
      %ul.nav.nav-list
        %li.nav-header Pinned Links
        - links.each do |link|
          %li= link_to truncate(link.title, :length => 20), link.href

    - if todo_lists = favorite_project_todo_lists.presence
      %ul.nav.nav-list
        %li.nav-header= "Pinned To-Do Lists"
      - todo_lists.each do |todo_list|
        .well.todo-list
          = render :partial => "todo_lists/show", :locals => {:resource => todo_list}