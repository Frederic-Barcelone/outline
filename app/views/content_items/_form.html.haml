- mode = resource.new_record? ? :new : :edit

.content-item-form-wrapper
  = simple_form_for resource, :html => {:remote => remote, :class => "#{resource_key} #{resource_key}-#{mode}"} do |form|
    = form.hidden_field :content_id
    = render :partial => "#{object_controller}/form", :locals => {:resource => resource, :form => form}
    = form.buttons :remote => remote
