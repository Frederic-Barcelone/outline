<% if resource.valid? %>
  <%= insert_html resource.content_item.position == 1 ? :prepend : :append, dom_id(resource.content_item.content), :partial => "content_items/show", :locals => {:content_item => resource.content_item} %>

  OUT.contentItems.deactivateForm("form.<%= resource.class.to_s.underscore %>", "#<%= dom_id(resource.outer_content) %>");
  OUT.created("<%= resource.class.to_s.underscore %>", "#<%= dom_id(resource.content_item) %>");
<% end %>