.page-item
  = render "content_items/top_add_form", :content => resource.inner_content

= render "content/show", :content => resource.inner_content

- content_for(:page_header) do
  .pull-right
    .btn-group
      = favorite_button resource
      = link_to icon(:edit) + t(".edit_link"), {:action => :edit, :id => resource}, {:class => "btn edit"}
      %a.btn.dropdown-toggle{:"data-toggle" => "dropdown"}
        %span.caret
      %ul.dropdown-menu
        %li= link_to icon(:trash) + t(".delete_link"), {:action => :destroy, :id => resource}, {:method => :delete, :confirm => t(".confirm_delete")}

= render "projects/sidebar"