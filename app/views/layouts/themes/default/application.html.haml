!!! 5
%html
  %head
    %title Outline
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags 

    %style{:type => "text/css"}

  %body

    .topbar
      .fill
        .container
          = link_to current_domain.try(:title), root_path, :class => "brand"
          
          %ul.nav
            = nav_to "Home", :welcome
            = nav_to "Projects", :projects
            = nav_to "Pages", :pages
          
          - if logged_in?
            %ul.nav.secondary-nav
              %li.dropdown
                %a.dropdown-toggle{:href => "#"} Domain
                
                %ul.dropdown-menu
                  %li= link_to "Users", users_path
                  %li= link_to "Edit Settings", users_path
              %li.dropdown
                %a.dropdown-toggle{:href => "#"}= current_user.login
                
                %ul.dropdown-menu
                  %li= link_to "Logout", logout_path

          - else
            %form.pull-right{:action => user_sessions_path, :method => "POST"}
              %input.input-small{:name => "user_session[login]", :type => :text, :placeholder => "Username"}
              %input.input-small{:name => "user_session[password]", :type => :password, :placeholder => "Password"}
              %button.btn{:type => :submit} Login
            

    .container
      .content
        .page-header
          .pull-left
            - if action_name == 'show' && resource.respond_to?(:title)
              %h1{:id => dom_id(resource)}
                = resource.title
                %small
                  = edit_link resource
            - else
              %h1
                = t("#{controller_name}.#{action_name}.page_header")
                %small
                  = t("#{controller_name}.#{action_name}.page_hint")
          .pull-right
            = yield(:page_header)
          .clearboth
        .row
          .span12
            = yield
          .span4
            %h3 Secondary content

      %footer
        %p.powered-by Powered by Outline &copy; 2011-#{Time.now.year} René Föhring
